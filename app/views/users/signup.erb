<main>
    <section class='login-signup'>
        <h2>Sign Up to Create Your MN Brewery Passport!</h2>

        <form action='/signup' method='post'>
            <label for='username'>Username: </label>    
            <input type='text' id='username' name="user[username]"><br><br>

            <label for='email'>Email: </label>    
            <input type='text' id='email' name="user[email]"><br><br>

            <label for='password'>Password: </label>    
            <input type='password' id='password' name="user[password]"><br><br>

            <input class='button' type='submit' value='Submit'>
        </form>

        <br><br>

        <p class="flash"><%= flash[:error] %></p>
    </section>
</main>